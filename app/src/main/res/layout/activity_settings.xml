<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:orientation="vertical"
    android:layout_margin="10dp"
    >


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ProfileImageId"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/user"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#10111010"
        />

    <ImageView
        android:id="@+id/editProfileImageId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/camera"
        android:clickable="true"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:id="@+id/set_profile_name_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:drawableStart="@drawable/user_name"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/colored_border_round_shape"
        android:padding="10dp"
        android:hint="User name"
        />

    <EditText
        android:id="@+id/set_profile_status_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:drawableStart="@drawable/status"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/colored_border_round_shape"
        android:padding="10dp"
        android:hint="Hey ! I am available now."
        />
    
    <Button
        android:id="@+id/nextButtonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:textColor="#025980"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:background="@drawable/button_border"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />

</LinearLayout>